<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Chọn thành phố -->
        <Spinner
            android:id="@+id/locationSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Tên thành phố -->
        <TextView
            android:id="@+id/cityText"
            android:text="Chưa chọn thành phố"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Nhiệt độ -->
        <TextView
            android:id="@+id/tempText"
            android:text="Nhiệt độ: -- °C"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Mô tả thời tiết -->
        <TextView
            android:id="@+id/descText"
            android:text="Trạng thái: --"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Độ ẩm -->
        <TextView
            android:id="@+id/humidityText"
            android:text="Độ ẩm: -- %"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Tốc độ gió -->
        <TextView
            android:id="@+id/windText"
            android:text="Gió: -- m/s"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Nút xem dự báo -->
        <Button
            android:id="@+id/btnForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dự báo chi tiết"
            android:layout_marginTop="16dp" />

        <!-- Nút lấy vị trí hiện tại -->
        <Button
            android:id="@+id/btnCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lấy thời tiết vị trí hiện tại"
            android:layout_marginTop="12dp" />

        <!-- Nút chọn trên bản đồ -->
        <Button
            android:id="@+id/btnMapLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn vị trí trên bản đồ"
            android:layout_marginTop="12dp" />

    </LinearLayout>
    <!-- Nút chọn chia sẻ -->
    <Button
        android:id="@+id/btnShareWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chia sẻ thời tiết"
        android:drawableStart="@drawable/ic_share"
        android:padding="10dp"
        android:layout_marginTop="16dp" />

</ScrollView>
