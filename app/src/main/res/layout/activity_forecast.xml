<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/cloud_rainy_background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Tiêu đề cho phần dự báo thời tiết chi tiết -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/forecastTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="quay lại"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Dự báo thời tiết cho ngày 1 -->
        <TextView
            android:id="@+id/day1Forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày 1: (đang tải...)"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Dự báo thời tiết cho ngày 2 -->
        <TextView
            android:id="@+id/day2Forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày 2: (đang tải...)"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Dự báo thời tiết cho ngày 3 -->
        <TextView
            android:id="@+id/day3Forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày 3: (đang tải...)"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Dự báo thời tiết cho ngày 4 -->
        <TextView
            android:id="@+id/day4Forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(đang tải...)"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Dự báo thời tiết cho ngày 5 -->
        <TextView
            android:id="@+id/day5Forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày 5: (đang tải...)"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:attr/selectableItemBackground" />

    </LinearLayout>
</ScrollView>